<div>
    <div class="scrollable" style="max-height: 70vh;">

        <ul class="actor-options-list">
            {{#each actorOptions as |actor|}}
            <li data-uuid="{{actor.uuid}}">
                <fieldset class="flexrow">
                    <legend>{{actor.document.name}}</legend>
                    <img src="{{actor.document.img}}" />
                    <select name="style">
                        {{selectOptions ../barStyleOptions selected=actor.style}}
                    </select>
                    <button type="button" id="add"><i class="fas fa-plus"></i>{{localize "Add"}}</button>
                </fieldset>
            </li>
            {{/each}}
        </ul>
        <hr style="min-height: 2px;">
        <ul class="selected-actors-list">
            {{#each actors as |actor|}}
            <li data-uuid="{{actor.uuid}}">
                <fieldset class="flexrow">
                    <legend>{{actor.document.name}}</legend>
                    <img src="{{actor.document.img}}" />
                    <input type="checkbox" style="max-width: fit-content;" name="hideName" {{#if
                        actor.hideName}}checked{{/if}} data-tooltip="bossbar.boss-bar-configuration.hideNameHint" />
                    <select name="style">
                        {{selectOptions ../barStyleOptions selected=actor.style}}
                    </select>
                    <button type="button" id="delete"><i class="fas fa-trash"></i>{{localize "Delete"}}</button>
                </fieldset>
            </li>
            {{/each}}
        </ul>
    </div>

    <footer class="form-footer">
        <button type="button" id="edit-themes"><i class="fas fa-palette"></i>{{localize
            "bossbar.boss-bar-configuration.edit-themes"}}</button>
        <button type="button" id="save-pan"><i class="fas fa-camera-movie"></i>{{localize
            "bossbar.boss-bar-configuration.save-pan"}}</button>
        <button type="button" id="save"><i class="fas fa-save"></i>{{localize "Save"}}</button>
    </footer>
</div>