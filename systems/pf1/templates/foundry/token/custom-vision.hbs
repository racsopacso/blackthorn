<fieldset class="pf1-v2 custom-vision">
	<legend>{{localize "PF1.Title"}}</legend>

	<div class="form-group slim" data-tooltip="PF1.CustomVisionRules.Description">
		<label for="{{appId}}-pf1-custom-vision">{{localize "PF1.CustomVisionRules.Label"}}</label>
		<div class="form-fields">
			<input id="{{appId}}-pf1-custom-vision" type="checkbox" name="flags.pf1.customVisionRules" data-dtype="Boolean" {{checked enabled}} {{disabled noSystemVision}}>
		</div>
	</div>

	<p class="hint">{{localize "PF1.CustomVisionRules.ConfigHint"}}</p>
</fieldset>
