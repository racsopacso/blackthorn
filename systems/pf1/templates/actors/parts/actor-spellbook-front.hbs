{{!-- Spellbook Navigation --}}
<nav class="sheet-navigation tabs spellbooks" data-group="spellbooks">
  {{#each system.attributes.spells.spellbooks}}
    {{#if inUse}}
    <a class="item" data-tab="{{@key}}" data-group="spellbooks">
      <span class="label">{{label}}</span>
      <span class="caster-level">{{cl.total}}</span>
    </a>
    {{/if}}
  {{/each}}
</nav>

<section class="spellbooks-body">
  {{#each spellbookData}}
    {{#if inUse}}
    <div class="tab spellbook-group flexcol" data-group="spellbooks" data-tab="{{@key}}">
    {{~> "systems/pf1/templates/actors/parts/actor-spellbook.hbs" spellbook=this bookId=@key
      data=../data filters=../filters.spellbook isCharacter=@root.isCharacter
      spellFailure=../spellFailure hiddenElems=../hiddenElems}}
    </div>
    {{/if}}
  {{/each}}
</section>
