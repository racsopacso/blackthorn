<h3 class="form-header">{{localize "PF1.Proficiency.Granted"}}</h3>

<div class="form-group weapon-proficiencies">
  <label>{{localize "PF1.Proficiency.Weapon.LabelPlural"}}</label>
  <div class="form-fields">
    <ul class="traits-list tag-list">
      {{#each weaponProf.selected as |v k|}}
        <li class="tag {{k}}">{{v}}</li>
      {{/each}}
    </ul>
    <a class="trait-selector" data-title="PF1.Proficiency.Weapon.LabelPlural" data-options="weaponProficiencies" data-for="system.weaponProf"><i class="fa-solid fa-edit" inert></i></a>
  </div>
</div>

